<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.masjid.EventActivity"
    tools:showIn="@layout/activity_event">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icDate"
                android:padding="8dp"
                android:src="@drawable/ic_event_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/tvDate"
                android:layout_centerVertical="true"
                android:text="Date"
                android:layout_toRightOf="@+id/icDate"
                android:layout_toEndOf="@+id/icDate"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icSpeaker"
                android:padding="8dp"
                android:src="@drawable/ic_face_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/tvSpeaker"
                android:text="Speaker"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icSpeaker"
                android:layout_toEndOf="@+id/icSpeaker"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icTime"
                android:padding="8dp"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/tvTime"
                android:text="Time"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icTime"
                android:layout_toEndOf="@+id/icTime"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icPlace"
                android:padding="8dp"
                android:src="@drawable/ic_place_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/tvPlace"
                android:text="Place"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icPlace"
                android:layout_toEndOf="@+id/icPlace"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:layout_margin="@dimen/text_margin"
            android:text="Desription" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
